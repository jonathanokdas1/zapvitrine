generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id        String     @id @default(cuid())
  name      String
  state     String     // UF (e.g., SP, RJ)
  slug      String     @unique
  locations Location[]
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password_hash String
  
  // Auth
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  emailVerified    DateTime?
  emailVerificationToken String? @unique
  
  // Profile
  name          String    // Store Name
  owner_name    String?   // Personal Name
  slug          String    @unique
  logo_url      String?
  description   String?
  phone         String?   // WhatsApp
  document      String?   // CPF/CNPJ
  category      String?   // Enum: FOOD, SERVICE, RETAIL (Legacy, keeping for safety)
  category_slug String?
  store_type    String?   // Enum: FOOD, RETAIL, SERVICE
  opening_hours String?
  address_text  String?
  
  // Metrics
  views           Int @default(0)
  clicks_whatsapp Int @default(0)
  
  // Trust & Safety
  verified        Boolean @default(false)
  blocked         Boolean @default(false)
  
  // Relations
  location      Location?
  business      Business?
  plan          Plan?
  metrics       Metrics?
  products      Product[]
  analytics     AnalyticsDay[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Location {
  id          String @id @default(cuid())
  address_text String
  cityId      String
  city        City   @relation(fields: [cityId], references: [id])
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Business {
  id            String  @id @default(cuid())
  category      String  // Enum: FOOD, SERVICE, RETAIL (Stored as string for SQLite simplicity or use native Enum if preferred, keeping string for flexibility)
  consumption_mode String? // Enum: DELIVERY, PICKUP, BOTH, DINE_IN
  opening_hours String?
  schedule      String? // JSON: { "monday": { "start": "09:00", "end": "18:00", "isOpen": true }, ... }
  is_open       Boolean @default(false)
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plan {
  id     String @id @default(cuid())
  plan   String @default("FREE") // Enum: FREE, PRO
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Metrics {
  id          String @id @default(cuid())
  views_count Int    @default(0)
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       BigInt      // Base price in cents
  promo_price BigInt?     // Nullable
  images      String   // JSON array of URLs
  variants    String   // JSON: [{ name: "Size", type: "SELECT", options: [...] }]
  is_active   Boolean  @default(true)
  is_service  Boolean  @default(false)
  views       Int      @default(0)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AnalyticsDay {
  id        String   @id @default(cuid())
  date      DateTime // Only the date part matters, or set time to 00:00:00
  views     Int      @default(0)
  clicks    Int      @default(0)
  cart_adds Int      @default(0)
  revenue_potential Int @default(0) // In cents
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([date, userId])
  @@index([date])
}
